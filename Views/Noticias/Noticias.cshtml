    <style>

        body {
            margin: 0;
            background: #ffffff;
            font-family: Arial, sans-serif;
        }

        /* ESPACIOS PARA TU HEADER Y FOOTER REALES */
        .header-space {
            height: 80px;
        }

        .footer-space {
            height: 100px;
        }

        /* CONTENEDOR PRINCIPAL */
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 10px 20px;
        }

        /* BUSCADOR */
        .search-container {
            margin-top: 10px;
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
        }

        .search-box {
            width: 100%;
            max-width: 500px;
            padding: 10px 14px;
            border-radius: 20px;
            border: 2px solid #27b4a1;
            font-size: 15px;
            outline: none;
        }

        /* TÍTULO */
        h2 {
            text-align: center;
            margin: 10px 0 25px 0;
            font-size: 24px;
        }

        /* GRID DE NOTICIAS */
        .news-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 18px;
            padding-bottom: 40px;
        }

        .news-card {
            background: white;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.12);
            cursor: pointer;
            transition: 0.2s;
        }

        .news-card:hover {
            transform: scale(1.02);
        }

        .news-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .news-card .title {
            padding: 10px;
            font-size: 15px;
            font-weight: bold;
        }
    </style>
</head>

