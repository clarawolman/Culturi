<h1 class="Tramite-h1">Guia de Tramite</h1>
@model TramitesVM
<section>
    <h3>Trámites para vos</h3>




    @foreach (var t in Model.TramitesParaVos)
    {
        <div class="tramite-card">
            <div class="tramite-info">
                <span>@t.Titulo</span>




                <form asp-action="AgregarTramite" method="post" class="form-agregar" style="display:inline;">
                    <input type="hidden" name="IdTramite" value="@t.IdTramite" />
                    <button type="submit" class="btn-circle btn-help">+</button>
                </form>
            </div>
            <div class="tooltip-container">
                <div class="tooltip">
                    @{
                        var primerPaso = t.Pasos?.FirstOrDefault();
                    }
                    @primerPaso?.Descripcion
                </div>
            </div>
        </div>
    }
</section>




</section>
<section>
    <h3>Mis trámites</h3>




    @foreach (var t in Model.MisTramites)
    {
        <div class="tramite-card">
            <div class="tramite-info">
                <button class="btn-circle btn-green">✔</button>




                <form asp-action="EliminarTramite" method="post" class="form-tramite" style="display:inline;">
                    <input type="hidden" name="id" value="@t.IdTramite" />
                    <button type="submit" class="btn-circle btn-red">✖</button>
                </form>




                <a asp-action="PasosDelTramite" asp-route-id="@t.IdTramite">
                    <h6>@t.Titulo</h6>
                </a>




                <div class="tramite-progress">
                    <span style="width: @t.ProgresoPorcentaje%;"></span>
                </div>
            </div>




            <button class="btn-circle btn-help">?</button>
        </div>
    }
</section>


    <a href="/ChatBot/ChatBot" class="floating-bot">
    <img src="/img/Home/ChatBot.png" alt="ChatBot">




</section>
