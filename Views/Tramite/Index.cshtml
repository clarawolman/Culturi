<h1>Guia de Tramite</h1>
@model TramitesVM
<section>
    <h3>Trámites para vos</h3>

    @foreach (var t in Model.TramitesParaVos)
    {
        <div class="tramite-card">
            <div class="tramite-info">
                <button class="btn-circle btn-green">✔</button>
                <button class="btn-circle btn-red">✖</button>

                <span>@t.Titulo</span>

                <form asp-action="AgregarTramite" method="post">
                    <input type="hidden" name="IdTramite" value="@t.IdTramite" />
                    <button type="submit" class="btn-circle btn-help">+</button>
                </form>
            </div>

            <button class="btn-circle btn-help">?</button>
        </div>
    }
</section>
<section>
    <h3>Mis trámites</h3>

    @foreach (var t in Model.MisTramites)
    {
        <div class="tramite-card">
            <div class="tramite-info">
                <button class="btn-circle btn-green">✔</button>
                <button class="btn-circle btn-red">✖</button>

                <a asp-action="Detalle" asp-route-id="@t.IdTramite">
                    <h6>@t.Titulo</h6>
                </a>

                <div class="tramite-progress">
                    <span style="width: 60%;"></span>
                </div>
            </div>

            <button class="btn-circle btn-help">?</button>
        </div>
    }
</section>



