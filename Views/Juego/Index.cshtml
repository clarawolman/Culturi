<main>
  <div class="container mt-4">
    <h2>Juegos</h2>

    <!-- Campo de búsqueda -->
    <input type="text" id="buscador" class="form-control mb-3" placeholder="Buscar por nombre..." />

    <!-- Tabla de juegos -->
    <table class="table table-striped" id="tablaJuegos">
        <thead>
            <tr>
                <th>Nombre</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var juego in Model)
            {
                <tr>
                    <td>@juego.Nombre</td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Filtra la tabla al escribir
        document.getElementById("buscador").addEventListener("keyup", function () {
            const filtro = this.value.toLowerCase();
            const filas = document.querySelectorAll("#tablaJuegos tbody tr");

            filas.forEach(fila => {
                const textoFila = fila.textContent.toLowerCase();
                fila.style.display = textoFila.includes(filtro) ? "" : "none";
            });
        });
    </script>
}


