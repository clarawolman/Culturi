<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Culturi</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-full">
        <div class="footer-container">
    
            <!-- SECCIONES SUPERIORES -->
            <div class="footer-sections">
    
                <div class="footer-column">
                    
                    <a href="#">Nosotros</a>
                    <a href="#">Contacto</a>
                    <a href="#">Ayuda</a>
                    <a href="#">Preguntas frecuentes</a>
                </div>
    
                <div class="footer-column">
                    <h4>Contenido</h4>
                    <a href="#">Artículos</a>
                    <a href="#">Noticias</a>
                    <a href="#">Eventos</a>
                    <a href="#">Tendencias</a>
                </div>
    
                <div class="footer-column">
                    <h4>Legal</h4>
                    <a href="#">Políticas</a>
                    <a href="#">Términos</a>
                    <a href="#">Privacidad</a>
                    <a href="#">Cookies</a>
                </div>
    
                <div class="footer-column">
                    <h4>Seguinos</h4>
    
                    <div class="footer-redes">
    
                        <a href="#" class="red-item">
                            <img src="/img/redes/instagram.svg" alt="Instagram">
                            <span>Instagram</span>
                        </a>
    
                        <a href="#" class="red-item">
                            <img src="/img/redes/X.png" alt="X">
                            <span>X</span>
                        </a>
    
                        <a href="#" class="red-item">
                            <img src="/img/redes/facebook.png" alt="Facebook">
                            <span>Facebook</span>
                        </a>
    
                        <a href="#" class="red-item">
                            <img src="/img/redes/Youtube_logo.png" alt="Youtube">
                            <span>YouTube</span>
                        </a>
    
                    </div>
                </div>
    
            </div>
    
            <!-- LÍNEA DIVISORIA -->
            <div class="footer-divider"></div>
    
            <!-- PARTE INFERIOR -->
            <div class="footer-bottom">
                <p>© 2025 Culturi. Todos los derechos reservados.</p>
    
                <div class="footer-bottom-links">
                    <a href="#">Privacidad</a>
                    <a href="#">Términos</a>
                    <a href="#">Sitemap</a>
                </div>
            </div>
    
        </div>
    </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
