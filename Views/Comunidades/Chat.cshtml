    <style>

        body {
            margin: 0;
            background: #ffffff;
            font-family: Arial, sans-serif;
        }

        /* HEADER DEL CHAT */
        .chat-header {
            width: 100%;
            height: 70px;
            background: #51acb8; /* color exacto del mockup */
            display: flex;
            align-items: center;
            padding: 0 15px;
            box-sizing: border-box;
            justify-content: space-between;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .back-btn {
            font-size: 28px;
            cursor: pointer;
        }

        .group-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
        }

        .group-title {
            font-size: 19px;
            font-weight: bold;
            color: black;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .join-btn {
            background: #8af971;
            padding: 6px 14px;
            border-radius: 12px;
            font-weight: bold;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }

        .menu-dots {
            font-size: 25px;
            cursor: pointer;
        }

        /* CONTENEDOR CENTRAL */
        .chat-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 15px;
            padding-bottom: 120px; 
        }

        /* MENSAJES */
        .message-block {
            margin-bottom: 25px;
        }

        .user-name {
            font-weight: bold;
            margin-bottom: 6px;
            font-size: 15px;
        }

        .bubble {
            background: #ffffff;
            border: 3px solid #0f331d;
            border-radius: 15px;
            padding: 12px 15px;
            max-width: 480px;
            font-size: 15px;
            line-height: 1.35;
        }

        .bubble.me {
            margin-left: auto;
            background: #d5ffd7;
            border-color: #4b7d4f;
        }

        .message-block.me {
            text-align: right;
        }

        /* INPUT ABAJO */
        .input-area {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: #2bb9a9;
            padding: 12px 0;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .input-box {
            width: 70%;
            max-width: 600px;
            padding: 10px 14px;
            border-radius: 20px;
            border: none;
            outline: none;
            font-size: 15px;
        }

        .icon-btn {
            font-size: 22px;
            cursor: pointer;
            color: white;
        }
        
    </style>
</head>

