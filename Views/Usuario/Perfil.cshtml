@model Usuario
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="custom-header">


    <nav class="navbar navbar-expand-lg navbar-dark custom-nav">
       
        <div class="container-fluid">


            <!-- Logo -->
      <img class = "logo-header" src="/img/Home/logoSVG.svg" alt="logo">

            <!-- Botón de Bootstrap para responsive (oculta solo el nav normal, NO EL HAMBURGUESA) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAV NORMAL -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-3">

                    <!-- HOME -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Home">Home</a>
                    </li>

                    <!-- JUEGOS -->
              <li class="nav-item">
                        <a class="nav-link" href="/Juego/Index">Juego</a>
                    </li>


                    <!-- GRUPOS -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Comunidades/Grupos">Grupos</a>
                    </li>

                    <!-- TRÁMITES -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Tramite/">Trámites</a>
                    </li>

          
                    <!-- MAPA -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Mapa/Index">Mapa</a>
                    </li>

                    <!-- NOTICIAS -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Noticias/Noticias">Noticias</a>
                    </li>

                </ul>
            </div>


        </div>
    </nav>

    <!-- MENU LATERAL HAMBURGUESA -->
 

<div id="sideMenu" class="side-menu">

    <button id="closeBtn" class="close-menu-btn">←</button>

    <div class="side-menu-links">
         <a href="/Home/Home">Home</a>
        <a href="@Url.Action("Index", "Juego")">Juegos</a>
        <a href="/Comunidades/Grupos">Grupos</a>
        <a href="/Tramite/">Trámites</a>
        <a href="/Mapa/Index">Mapa</a>
        <a href="/Noticias/Noticias">Noticias</a>
        <a href='@Url.Action("Perfil", "Usuario")'>Perfil</a>
        <a href="/Usuario/Noti">Notificaciones</a>
        <a href='@Url.Action("ChatBot", "ChatBot")'>ChatBot</a>
        <a href='@Url.Action("CerrarSesion", "Usuario")'>Cerrar Sesión</a>


    </div>
    

</div>
            <!-- BOTÓN HAMBURGUESA PERSONALIZADO (A LA DERECHA SIEMPRE) -->
            <button class="menu-btn fixed-btn" id="menuBtn">☰</button>



</header>
<main>
    <div class="perfil-container">




        <section class="perfil-principal">
            <div class="perfil-foto">
                @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                {
                    <img src="/img/perfiles/@Model.FotoPerfil" alt="foto de perfil">
                }
                else
                {
                    <img src="/img/perfil.png" alt="foto de perfil">
                }
            </div>


            <h1 class="perfil-nombre">@Model.Nombre</h1>
            <p class="perfil-usuario">@Model.usuario</p>


            <button class="btn-editar"
                    onclick="location.href='@Url.Action("EditarPerfil", "Usuario", new { id = Model.IdUsuario })'">
                Editar Perfil
            </button>


            <div class="perfil-info">
                <div class="info-bloque">
                    <strong>Nacido en...</strong>
                    <p>@ViewBag.PaisOrigen</p>
                </div>
                <div class="info-bloque">
                    <strong>Viviendo en...</strong>
                    <p>@ViewBag.PaisDestino</p>
                </div>
                <div class="info-bloque">
                    <strong>Emigró en...</strong>
                    <p>@Model.fechaMigracion.ToShortDateString()</p>
                </div>
            </div>


            <div class="perfil-publicaciones">
                <strong>Publicaciones:</strong>
                <div class="publicaciones-grid">
                    <img src="/img/perfiles/Cataratas.jpg" alt="Publicación 1">
                    <img src="/img/perfiles/Paisaje2.jpg" alt="Publicación 2">
                    <img src="/img/perfiles/Paisaje3.jpg" alt="Publicación 3">
                    <img src="/img/perfiles/Paisaje4.jpg" alt="Publicación 4">
                </div>
                <button class="btn-vermas">Ver más</button>
            </div>
        </section>
    </div>
        <a href="/ChatBot/ChatBot" class="floating-bot">
    <img src="/img/Home/ChatBot.png" alt="ChatBot">
</main>
</body>
