@{
    ViewData["Title"] = "Registro";
}

<link rel="stylesheet" href="~/css/registro.css" />

<div class="registro-container">
    <h2>Registrarse</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
    {
        <p class="message">@ViewBag.Mensaje</p>
    }

    <form method="post" asp-action="Registro" class="registro-form">
        <label>Nombre:</label>
        <input type="text" name="Nombre" required />

        <label>Nombre de usuario:</label>
        <input type="text" name="NombreUsuarioIngresado" required />

        <label>Idioma de preferencia:</label>
        <select name="Idioma" required>
            <option value="">Seleccione un idioma</option>
            <option>Español</option>
            <option>Inglés</option>
            <option>Portugués</option>
        </select>

        <label>Fecha de nacimiento:</label>
        <input type="date" name="FechaNacimiento" required />

        <label>País de origen:</label>
        <div class="radio-row">
            <label><input type="radio" name="PaisOrigen" value="Argentina" required /> Argentina</label>
            <label><input type="radio" name="PaisOrigen" value="Chile" /> Chile</label>
            <label><input type="radio" name="PaisOrigen" value="Uruguay" /> Uruguay</label>
        </div>

        <label>País de llegada:</label>
        <div class="radio-row">
            <label><input type="radio" name="PaisLlegada" value="Argentina" required /> Argentina</label>
            <label><input type="radio" name="PaisLlegada" value="Chile" /> Chile</label>
            <label><input type="radio" name="PaisLlegada" value="Uruguay" /> Uruguay</label>
        </div>

        <label>Fecha de emigración:</label>
        <input type="date" name="FechaEmigracion" required />

        <label>Email de contacto:</label>
        <input type="email" name="Email" required />

        <label>Contraseña:</label>
        <input type="password" name="Contrasena" required />

        <button type="submit">Crear cuenta</button>
    </form>
</div>

