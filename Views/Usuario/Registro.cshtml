@{
    ViewData["Title"] = "Registro";
}

<h2>Registrarse</h2>

@if (ViewBag.Mensaje != "")
{
    <p><p class="message">@ViewBag.Mensaje</p>
</p>
}
<form method="post" asp-action="Registro">
    <p>Nombre:</p>
    <input type="text" name="Nombre" required />
    <p>Nombre de Usuario:</p>
    <input type="text" name="NombreUsuarioIngresado" required />
    <p>Idioma de preferencia:
    <select name = "Idioma">
    <option selected> </option>
    <option>Español</option>
    <option>Inglés</option>
    <option>Portugués</option>
    </p>
    <p>Fecha de nacimiento:</p>
    <input type="calendar" name="FechaNacimiento" required />
    <p>Ingrese país de origen:
    <input type="ratio" name="PaisOrigen" value =""/>
    <input type="ratio" name="PaisOrigen" value =""/>
    <input type="ratio" name="PaisOrigen" value =""/>
    </p>
    <p>Ingrese país de llegada:</p>
    <input type="ratio" name="PaisLlegada"/>
    <p>Fecha de emigración:</p>
    <input type="calendar" name="FechaEmigracion" required />
    <p>Email de contacto:</p>
    <input type="email" name="Email" required />
    <p>Contraseña:</p>
    <input type="password" name="Contrasena" required />
    <br />
    <button type="submit">Crear cuenta</button>
</form>
<br />
