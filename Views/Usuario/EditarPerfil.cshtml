        <a href="/Usuario/Noti">Notificaciones</a>
        <a href='@Url.Action("ChatBot", "ChatBot")'>ChatBot</a>
        <a href='@Url.Action("CerrarSesion", "Usuario")'>Cerrar Sesión</a>


    </div>
    

</div>
            <!-- BOTÓN HAMBURGUESA PERSONALIZADO (A LA DERECHA SIEMPRE) -->
            <button class="menu-btn fixed-btn" id="menuBtn">☰</button>



</header>
<div class="titulo-editarPerfil">
    <h2>Editar Perfil</h2>
</div>

<div class="form-edicion">
        <form method="post" enctype="multipart/form-data" action="/Usuario/EditarPerfil" class="form-editar">


        <!-- El hidden correcto -->
       <input type="hidden" asp-for="IdUsuario" />


        <label>Nombre:</label>
        <input asp-for="Nombre" />

        <label>Usuario:</label>
        <input asp-for="usuario" />

        <label>Email:</label>
        <input asp-for="Email" />

        <label>Foto de perfil:</label>
        <input type="file" name="FotoPerfil" accept="image/*" />

        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
        {
            <img src="/img/perfiles/@Model.FotoPerfil"
                 style="width:120px; border-radius:50%; margin-top:10px;" />
        }

        <button type="submit" class="btn-guardar">Guardar</button>
    </form>
</div>
<a href="/ChatBot/ChatBot" class="floating-bot">
    <img src="/img/Home/ChatBot.png" alt="ChatBot">
</body>