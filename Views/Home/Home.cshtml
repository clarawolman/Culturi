    @{
        int i = 0;
    }




    <div class="tramites-lista">




        @if (Model != null && Model.Any())
        {
            foreach (var t in Model.Take(3))
            {
                <div class="tramite-item">
                    <div class="tramite-nombre">
                        <span class="numero">@(++i).</span>
                        <span class="titulo">@t.Titulo</span>
                    </div>
                    
                    <div class="barra-progreso" style="width: @t.ProgresoPorcentaje%;"></div>
