@{
    ViewData["Title"] = "Culturi - Landing";
}

<link rel="stylesheet" href="~/css/landing.css" />

<div class="landing-container">
    <section class="hero">
        <img src="~/images/landing-hero.jpg" alt="Culturi comunidad viajera" class="hero-img">
        <div class="hero-text">
            <h1>¿Qué es Culturi?</h1>
            <p>Culturi es una plataforma que conecta viajeros y locales para compartir experiencias auténticas.</p>
            <a href="/Usuario/Registro" class="btn-primary">¡Únete a la comunidad!</a>
        </div>
    </section>

    <section class="features">
        <h2>Una plataforma pensada para los viajeros</h2>
        <div class="feature-grid">
            <div class="feature">
                <img src="~/images/icon-comunidad.png" alt="Comunidad">
                <h3>Comunidad mundial</h3>
                <p>Conecta con personas de todo el mundo que comparten tus intereses.</p>
            </div>
            <div class="feature">
                <img src="~/images/icon-experiencias.png" alt="Experiencias">
                <h3>Experiencias únicas</h3>
                <p>Participa en actividades creadas por locales en cada destino.</p>
            </div>
            <div class="feature">
                <img src="~/images/icon-cultura.png" alt="Cultura">
                <h3>Aprende de la cultura</h3>
                <p>Vive la cultura de cada lugar desde adentro, no como turista.</p>
            </div>
        </div>
    </section>

    <section class="steps">
        <h2>¿Por dónde empezar?</h2>
        <div class="step-list">
            <div class="step">
                <span class="step-number">1</span>
                <p>Registrate en Culturi</p>
            </div>
            <div class="step">
                <span class="step-number">2</span>
                <p>Elegí tu destino o experiencia</p>
            </div>
            <div class="step">
                <span class="step-number">3</span>
                <p>Conectá con personas reales</p>
            </div>
            <div class="step">
                <span class="step-number">4</span>
                <p>Viví la experiencia</p>
            </div>
        </div>
    </section>
</div>

